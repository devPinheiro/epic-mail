{
  "name": "epic-mail",
  "version": "1.0.0",
  "description": "an email web app that helps people exchange messages/information over the internet.",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon  --exec babel-node --presets env src/app.js",
    "start": "nodemon  --exec babel-node --presets env src/app.js",
    "test": "cross-env NODE_env=test nyc --require babel-core/register mocha src/**/test.js --timeout 8000 --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "babel src -d dist --source-maps inline --copy-files",
    "heroku-postbuild": "npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devPinheiro/epic-mail.git"
  },
  "keywords": [
    "web",
    "app",
    "EPIC",
    "mail",
    "communication"
  ],
  "author": "Pinheiro Samuel",
  "license": "MIT",
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2016": "^6.24.1",
    "bcryptjs": "^2.4.3",
    "chai-http": "^4.2.0",
    "express": "^4.16.3",
    "joi": "^14.0.1",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/joi": "^13.6.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.3",
    "nyc": "^13.1.0"
  },
  "bugs": {
    "url": "https://github.com/devPinheiro/epic-mail/issues"
  },
  "homepage": "https://github.com/devPinheiro/epic-mail#readme"
}
